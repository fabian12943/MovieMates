#authentication-forgot-password.modal.c-modal.authentication-modal{ "aria-hidden": true, "aria-labelledby": "authentication-forgot-password", tabindex: -1 }
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %a.float-start{"data-bs-target": "#authentication-overview", "data-bs-toggle": "modal", type: "button"}
          %span.fa-solid.fa-chevron-left.back-modal
        %h1= t ('.forgot_password')
        %a.float-end{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
          %span.close-icon.fa-solid.fa-xmark.close-modal
      .modal-body
        = form_with(model: User.new, url: password_reset_path) do |f|
          .form-group
            .form
              .form-field
                = f.text_field :email, autocomplete: "off", class: "form-field__input", placeholder: " ", type: "text", id: "forgot-password-email"
                = f.label :email, class: "form-field__label", for: "forgot-password-email"
            .actions 
              = f.button :submit, class: "btn c-btn btn-form" do
                %i.fa-solid.fa-user-lock.fa-lg
                %span= t '.send_instructions'
        %hr
        .instructions
          %i.fa-solid.fa-envelope
          %p= t '.instructions_msg'
