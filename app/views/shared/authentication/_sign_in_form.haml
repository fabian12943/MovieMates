= form_with(model: User.new, url: sign_in_path, scope: :session, id: "login") do |f|
  .form-group
    - error ||= false
    - if error
      .form-error
        = t '.sign_in_failed_msg'
    .form
      .form-field
        = f.text_field :email, autocomplete: "off", class: "form-field__input", placeholder: " ", type: "text", id: "sign-in-email"
        = f.label :email, class: "form-field__label", for: "sign-in-email"
    .form
      .form-field
        = f.password_field :password, autocomplete: "off", class: "form-field__input", placeholder: " ", type: "password", id: "sign-in-password"
        = f.label :password, class: "form-field__label", for: "sign-in-password"
    .actions 
      = f.button :submit, class: "btn c-btn btn-form" do
        %i.fa-solid.fa-user-check.fa-lg
        %span= t('.sign_in')
