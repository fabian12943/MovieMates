#create-watchlist.modal.c-modal.create-watchlist-modal{ "aria-hidden": true, "aria-labelledby": "create-watchlist", tabindex: -1 }
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %h1= t '.create-new-watchlist-modal-heading' 
        %a.float-end{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
          %span.close-icon.fa-solid.fa-xmark.close-modal
      .modal-body
        = render partial: "users/watchlists/create_form", locals: { watchlist: Watchlist.new}